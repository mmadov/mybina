<h1>Akciyas</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Image</th>
      <th>Company</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @akciyas.each do |akciya| %>
      <tr>
        <td><%= akciya.title %></td>
        <td><%= akciya.text %></td>
        <td><%= akciya.image %></td>
        <td><%= akciya.company_id %></td>
        <td><%= akciya.desc %></td>
        <td><%= link_to 'Show', akciya %></td>
        <td><%= link_to 'Edit', edit_akciya_path(akciya) %></td>
        <td><%= link_to 'Destroy', akciya, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

