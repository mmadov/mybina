<section class="gl-page-content-section">
  <div class="container">
    <div class="row">
      <!-- PAGE CONTENT DETAILS -->
      <div class="gl-page-content col-md-8 col-sm-8 col-xs-12">
        <!-- SEARCH META -->
       
        <!-- SEARCH META END -->

        <!-- SEARCH RESULT -->
        <div class="gl-search-result-wrapper">
          <!-- FEATURED ITEMS -->
   <% @companies.each do |company| %>
          <div class="gl-featured-items gl-alt-search">
            <div class="gl-feat-items-img-wrapper">
              <picture>
                
  <%= image_tag company.image_url %>
    
  </picture>

              <span class="gl-price-tag"><%= company.price %></span>
            </div>

            <div class="gl-feat-details-meta">
              <div class="gl-feat-item-details">
                <h3>
                 <%= link_to company.name, company %>
                </h3>
                <div class="gl-item-location">
                  <i class="ion-ios-location-outline"></i>
                  <span><%= company.adress %></span>
                </div>

                <span class="gl-item-status-label gl-sold-label">Sold</span>
              </div>

            <% @homes = Post.where(company_id: company.id).all %>
   <% @homes.each do |home| %>
  <div class="gl-feat-item-metas"><ul class="gl-feature-info"><li>Otaq<span><%= home.room %></span></li><li>Sahe<span><%= home.area %>kv</span></li><li>Qiymet<span><%= home.price_room %> AZN</span></li></ul></div>

<% end %>
            </div>
          </div>
          <!-- END -->
<% end %>
          <!-- FEATURED ITEMS -->
        
      </div>
      </div>

      <!-- PAGE CONTENT DETAILS END -->

      <!-- SIDEBAR -->
      <div class="gl-sidebar gl-page-sidebar col-md-4 col-sm-4 col-xs-12">
        <!-- SIDEBAR WIDGET -->
        <div class="gl-sidebar-widget gl-search-filter-widget">
          <h3 class="gl-sidebar-title">Search Properties</h3>

<%= form_tag(companies_path, method: "get") do  %>
            <div class="gl-filter-options gl-search-keyword">
                <%= text_field_tag :name,params[:name], placeholder: "Sirketin adi" ,id:"gl-search-keyword" %>
</div>

            <div class="gl-filter-options gl-search-location">
              <%= text_field_tag :price,params[:price], placeholder: "1kv qiymeti",id:"gl-search-location" %>

             </div>

            <% cities_array = Region.all.map { |city| [city.name, city.id] } %>
    <%= select_tag(:region_id,options_for_select(cities_array),{include_blank: "Select something",class:"gl-category-dropdown-selection select2-hidden-accessible"}) %>

<span style="width: 118px;" dir="ltr" class="select2 select2-container select2-container--default">

<span class="dropdown-wrapper" aria-hidden="true"></span></span>
<%= button_to(companies_path,params[:search],
  class: 'gl-icon-btn',style:'background: #ff5400') do %>
 <i class="fa fa-search"></i> Axtar <% end %>
</div>

<!-- END -->
            

        <% end %>
        </div>
        <!-- END -->
      </div>
      <!-- SIDEBAR END -->
    </div>
  </div>
</section>